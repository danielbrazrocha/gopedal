<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <title>GoPedal Website</title>
  <link rel="shortcut icon" href="/assets/logo/favicon.ico"/>
  <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:400,400i,700,900&display=swap" rel="stylesheet">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link href="/node_modules/bootstrap/dist/css/bootstrap.css" />
  <!-- Boxicons CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <% if (typeof arquivoCss != "undefined") { %>
    <link rel="stylesheet" href="/css/<%= arquivoCss %>">
  <% } %>
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-green">
      <div class="container-fluid ">
        <a class="navbar-brand" href="/">
          <img src="/assets/logo/logo.png" alt="" width="250" height="60"
            class="d-inline-block align-text-top">
        </a>
        
        <form method="POST" action="/busca">
          <input class="input-header form-control" name="queryTxt" type="text" placeholder="busque aqui o seu produto" aria-label="Search">
        </form>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse " id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0  ">
            <% if (typeof user != "undefined") { %>
            <li class="nav-item">
              <div class="avatar-content">
              <a class="nav-link" href="/usuario">
                <i class='bx bx-user <%- (req.originalUrl.includes('usuario') || req.originalUrl.includes('painel') ? 'activelink' : '') %>' ></i>
                  <span class="<%- (req.originalUrl.includes('usuario') || req.originalUrl.includes('painel') ? 'activelink' : '') %>"><%= user.name.split(' ')[0] %> </span>
                </div>
              </a>
            </li>
            <% } else { %> 
              <li class="nav-item">
                <div class="avatar-content">
                <a class="nav-link <%- (req.originalUrl == '/login' && 'activelink') %>" href="/login">
                    <i class='bx bx-user'></i>
                    <span>Entrar</span>
                  </div>
                </a>
              </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link <%- (req.originalUrl == '/' && 'activelink') %>" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%- (req.originalUrl == '/carrinho' && 'activelink') %>" href="/carrinho">Carrinho</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%- (req.originalUrl == '/usuario/pedidos' && 'activelink') %>" href="/usuario/pedidos">Pedidos</a>
            </li>
            <% if (typeof user != "undefined") { %>
              <li class="nav-item">
                <a class="nav-link" href="/login/logout">Logout</a>
              </li>
            <% } %>  
       
          </ul>
        </div>
      </div>
    </nav>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center border-bottom">
    </div>
  </header>