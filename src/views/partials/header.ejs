<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <title>GoPedal Website</title>
  <link rel="shortcut icon" href="/assets/logo/favicon.ico"/>
  <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:400,400i,700,900&display=swap" rel="stylesheet">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link href="/node_modules/bootstrap/dist/css/bootstrap.css" />
  <!-- Boxicons CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <% if (typeof arquivoCss != "undefined") { %>
    <link rel="stylesheet" href="/css/<%= arquivoCss %>">
  <% } %>
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-green">
      <div class="container-fluid ">
        <a class="navbar-brand" href="/">
          <img src="/assets/logo/logo.png" alt="" width="250" height="60"
            class="d-inline-block align-text-top">
        </a>
        
        <form method="POST" action="/busca">
          <input class="input-header form-control" name="queryTxt" type="text" placeholder="busque aqui o seu produto" aria-label="Search">
        </form>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse " id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0  ">
            <% if (typeof user != "undefined") { %>
            <li class="nav-item">
              <a class="nav-link" href="/usuario">
                <div class="avatar-content">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                  </svg>
                  <b class="h6"><%= user.name.split(' ')[0] %> </b>
                </div>
              </a>
            </li>
            <% } else { %> 
              <li class="nav-item">
                <a class="nav-link" href="/login">
                  <div class="avatar-content">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                      <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                    </svg>
                    <b class="h6">Entrar</b>
                  </div>
                </a>
              </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/carrinho">Carrinho</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sobre">Sobre</a>
            </li>
            <% if (typeof user != "undefined") { %>
              <li class="nav-item">
                <a class="nav-link" href="/login/logout">Logout</a>
              </li>
            <% } %>  
       
          </ul>
        </div>
      </div>
    </nav>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center border-bottom">
    </div>
  </header>