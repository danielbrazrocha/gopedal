    <form class="py-3 px-4" action="/painel/pedido/<%= orderDetails.id %>" method="POST">
        <h2>Lista de produtos do pedido  <span class="search-error-alert"><%= orderDetails[0].OrderDetailId %></span></h2>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nome do Produto</th>
                <th scope="col">Pre√ßo</th>
                <th scope="col">Quantidade</th>
              </tr>
            </thead>
            <tbody>
                
                <% for (let i = 0; i < orderDetails.length; i++) { %>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= orderDetails[i].product.name %></td>
                        <td><%= orderDetails[i].product.price.toLocaleString('pt-BR', { minimumFractionDigits: 2 , style: 'currency', currency: 'BRL' }) %></td>
                        <td><%= orderDetails[i].quantity %></td>
                    </tr>
                <% } %>

         
            </tbody>
          </table>
    
    <!-- Button trigger modal -->
    <a href="/painel/pedido"        
        class="btn btn-secondary">
        Voltar
    </a>
      
        </div>
      </form>
    