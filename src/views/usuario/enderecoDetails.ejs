<!-- Form to editing an existing item -->
<% if (newItem === false) { %>

    <form class="py-3 px-4" action="/usuario/enderecos/<%= enderecoDetails.id %>" method="POST">
        <div class="form-row">
            <div class="form-group">
                <label for="id"></label>
                <input type="hidden" name="id" class="form-control" id="id" value='<%= enderecoDetails.id %>' placeholder="id do Produto">
            </div>
            <div class="form-group">
                <label for="description">Descrição</label>
                <textarea class="form-control" name="description" id="description" rows='4'><%= enderecoDetails.description %></textarea>
            </div>
            <div class="form-group">
              <label for="street">Rua</label>
              <input type="text" name="street" class="form-control" id="street" value='<%= enderecoDetails.street %>' placeholder="Endereço">
            </div>
            <div class="form-group col-md-6">
                    <label for="number">Número</label>
                    <input type="number" name="number" class="form-control" id="number" value='<%= enderecoDetails.number %>' placeholder="Número">
            </div>
            <div class="form-group col-md-6">
                <label for="details">Detalhes</label>
                <input type="text" name="details" class="form-control" id="details" value='<%= enderecoDetails.details %>' placeholder="Detalhes">
            </div>
            <div class="form-group col-md-6">
                <label for="CEP">CEP</label>
                <input type="text" name="CEP" class="form-control" id="CEP" value='<%= enderecoDetails.CEP %>' placeholder="CEP">
            </div>
            <div class="form-group col-md-6">
                <label for="country">País</label>
                <input type="text" name="country" class="form-control" id="country" value='<%= enderecoDetails.country %>' placeholder="País">
            </div>

        <div class="mt-5">
    
    <!-- Button trigger modal -->
    <a href="/usuario/enderecos"        
        class="btn btn-secondary">
        Voltar
    </a>
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Apagar
    </button>
      
      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Confirma a exclusão do item abaixo? <br> </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <%= enderecoDetails.description.substring(0, 100) %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <a href="/usuario/enderecos/deletar/<%= enderecoDetails.id %>"        
                class="btn btn-danger">
                Apagar
                </a>
            </div>
          </div>
        </div>
      </div>
    
    
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
      </form>
    
      <!-- Form to submit a NEW item -->
      <% } else { %>
    

        <form class="py-3 px-4" action="/usuario/enderecos/0 %>" method="POST">
          <div class="form-row">
              <div class="form-group">
                  <label for="id"></label>
                  <input type="hidden" name="id" class="form-control" id="id" placeholder="id do Produto">
              </div>
              <div class="form-group">
                  <label for="description">Descrição</label>
                  <textarea class="form-control" name="description" id="description" rows='4'></textarea>
              </div>
              <div class="form-group">
                <label for="street">Rua</label>
                <input type="text" name="street" class="form-control" id="street" placeholder="Endereço">
              </div>
              <div class="form-group col-md-6">
                      <label for="number">Número</label>
                      <input type="number" name="number" class="form-control" id="number" placeholder="Número">
              </div>
              <div class="form-group col-md-6">
                  <label for="details">Detalhes</label>
                  <input type="text" name="details" class="form-control" id="details" placeholder="Detalhes">
              </div>
              <div class="form-group col-md-6">
                  <label for="CEP">CEP</label>
                  <input type="text" name="CEP" class="form-control" id="CEP" placeholder="CEP">
              </div>
              <div class="form-group col-md-6">
                  <label for="country">País</label>
                  <input type="text" name="country" class="form-control" id="country" placeholder="País">
              </div>


              <div class="form-group col-md-6">
                <label for="newItem"></label>
                  <input type="hidden" name="newItem" class="form-control" id="newItem" value='0' placeholder="id do Produto">
              </div>
  
          <div class="mt-5">
      
      <!-- Button trigger modal -->
      <a href="/usuario/enderecos"        
          class="btn btn-secondary">
          Voltar
      </a>
       
      
              <button type="submit" class="btn btn-primary">Salvar</button>
          </div>
        </form>
    
      <% } %>